---
import Search from '../components/Search.astro';
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import { collectMdxContent } from '../utils/collectMdxContent';

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;

// Get all pages for search
const pages = await collectMdxContent();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/Entelexos.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/Entelexos.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/Entelexos.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Entelexos Docs</title>
    <!-- Google tag (gtag.js) -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-G1B3PGDFJM"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-G1B3PGDFJM');
    </script>
  </head>
  <body class="min-h-screen bg-gray-50">
    <div class="fixed top-0 left-0 right-0 z-10">
      <Header />
    </div>
    <div class="flex pt-16">
      <div class="fixed top-16 left-0 bottom-0">
        <Navigation currentPath={currentPath} />
      </div>
      <main class="flex-1 ml-64 px-4 sm:px-6 lg:px-8 py-8">
        <div class="max-w-[1200px] mx-auto">
          <slot />
        </div>
      </main>
    </div>
    <Search pages={pages} />
  </body>
</html>

<style is:global>
  body {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }

  /* Markdown Content Styles */
  main {
    width: 100%;
  }

  main h1 {
    font-size: 2.25rem;
    font-weight: 700;
    color: #111827;
    margin-top: 2rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  main h2 {
    font-size: 1.875rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 2rem;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  main h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: #374151;
    margin-top: 1.5rem;
    margin-bottom: 1rem;
    line-height: 1.4;
  }

  main p {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    line-height: 1.7;
    color: #4b5563;
  }

  main ul, main ol {
    margin-top: 1.25rem;
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
    color: #4b5563;
  }

  main li {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  main code {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    background-color: #f3f4f6;
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.875em;
  }

  main pre {
    background-color: #1f2937;
    color: #f3f4f6;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
  }

  main pre code {
    background-color: transparent;
    padding: 0;
    color: inherit;
  }

  main blockquote {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin-left: 0;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    color: #6b7280;
  }

  main a {
    color: #4f46e5;
    text-decoration: underline;
    text-decoration-thickness: 1px;
    text-underline-offset: 2px;
  }

  main a:hover {
    color: #4338ca;
  }

  main img {
    max-width: 100%;
    height: auto;
    margin-top: 1.5rem;
    margin-bottom: 1.5rem;
    border-radius: 0.5rem;
  }

  main hr {
    border: 0;
    height: 1px;
    background-color: #e5e7eb;
    margin: 2rem 0;
  }

  /* Next Steps Button Styles */
  main .next-steps {
    margin-top: 0;
    padding-top: 0;
    border-top: 1px solid #e5e7eb;
  }

  main .next-steps h2 {
    font-size: 1.5rem;
    color: #374151;
    margin-bottom: 1.5rem;
  }

  main .next-steps .button-group {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  main .next-steps a {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background-color: #4f46e5;
    color: white;
    font-weight: 500;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background-color 0.2s;
  }

  main .next-steps a:hover {
    background-color: #4338ca;
    color: white;
  }

  main .next-steps a::after {
    content: "â†’";
    margin-left: 0.5rem;
    transition: transform 0.2s;
  }

  main .next-steps a:hover::after {
    transform: translateX(0.25rem);
  }

  /* Accordion Styles */
  .accordion {
    margin: 1rem 0;
  }
  .accordion details {
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .accordion summary {
    padding: 1rem;
    cursor: pointer;
    font-weight: 600;
    background-color: #f9fafb;
  }
  .accordion .content {
    padding: 1rem;
    background-color: white;
  }
  details > div {
    transition: max-height 0.3s ease-out;
  }
  details:not([open]) > div {
    max-height: 0;
    overflow: hidden;
  }
  details[open] > div {
    max-height: 1000px;
  }
</style> 